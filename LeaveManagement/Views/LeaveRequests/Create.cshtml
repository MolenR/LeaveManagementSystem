@model LeaveRequestCreateViewModel

@{
    ViewData["Title"] = "Apply for Leave";
}

<h1>Leave Request</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label"></label>
                <select asp-for="LeaveTypeId" class="form-select" aria-label="Disabled select example" asp-items="Model.LeaveTypes">
                    <option disabled>Choose Leavetype</option>
                </select>
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control datepicker" type="text"/>
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control datepicker" type="text"/>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>                
                </div>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="RequestComment" class="control-label"></label>
                <textarea asp-for="RequestComment" class="form-control"></textarea>
                <span asp-validation-for="RequestComment" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a class="btn btn-dark btn-sm" asp-action="MyLeave">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-backspace" viewBox="0 0 16 16">
                        <path d="M5.83 5.146a.5.5 0 0 0 0 .708L7.975 8l-2.147 2.146a.5.5 0 0 0 .707.708l2.147-2.147 2.146 2.147a.5.5 0 0 0 .707-.708L9.39 8l2.146-2.146a.5.5 0 0 0-.707-.708L8.683 7.293 6.536 5.146a.5.5 0 0 0-.707 0z" />
                        <path d="M13.683 1a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-7.08a2 2 0 0 1-1.519-.698L.241 8.65a1 1 0 0 1 0-1.302L5.084 1.7A2 2 0 0 1 6.603 1h7.08zm-7.08 1a1 1 0 0 0-.76.35L1 8l4.844 5.65a1 1 0 0 0 .759.35h7.08a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1h-7.08z" />
                    </svg>
                </a>
                &nbsp;
                <input type="submit" asp-action="Create" class="btn btn-outline-success btn-sm" value="Submit">
            </div>
        </form>
    </div>
</div>
